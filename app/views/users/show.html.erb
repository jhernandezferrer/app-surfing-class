<div class="container users">
  <div class="links">
    <%= link_to root_path, class: "blue-button" do %>
      <i class="fas fa-undo"></i> Back
      <% end %>
    <%= link_to edit_user_path(@user), class: "blue-button" do %>
      <i class="far fa-edit"></i> Edit
      <% end %>
    <%= link_to 'Bookings', bookings_path, class: "blue-button"%>
    <%= link_to 'Lessons',  my_lessons_user_path, class: "blue-button" %>
  </div>
  <h2><strong>Name:</strong> <%= @user.name %></h2>
  <h2><strong>Description:</strong></h2>
  <p><%= @user.description %></p>
</div>
