<h1>All lessons</h1>

<button><%= link_to "Create new lesson", new_lesson_path %></button>
<br><br>
<div>
  <% @lessons.each do |lesson| %>
    <div class="card-lesson">
      <%#TODO: Add image %>
      <p>Location: <%= lesson.location %></p>
      <div class="card-lesson-info">
        <h2><%= lesson.title %></h2>
        <%# TODO: Set duration class %>
        <%# <p>Time: <%= @duration </p> %>
      </div>
        <p class="card-lesson-user avatar-bordered">Teacher: <%= lesson.user_id %></p>
        <h2 class="card-lesson-pricing"><%= lesson.price %>â‚¬ per person.</h2>
        <%= link_to "Show", lesson %>
        <% if policy(lesson).edit? %>
