<h1>All lessons</h1>

<button><%= link_to "Create new lesson", new_lesson_path %></button>
<br><br>
<div>
  <% @lessons.each do |lesson| %>
    <div>
      <h3><%= lesson.title %></h3>
      <p><%= lesson.description %></p>
    </div>
    <p>Location: <%= lesson.location %></p>
    <p>Teacher: <%= lesson.user_id %></p>
    <p>Price: <%= lesson.price %>â‚¬ per person.</p>
    <%= link_to "Show", lesson %>
    <% if policy(lesson).edit? %>
      <%= link_to "Edit", edit_lesson_path(lesson) %>
    <% end %>
  <% end %>
</div>
