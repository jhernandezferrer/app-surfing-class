<div class="container">

  <h1>All lessons</h1>

  <%= link_to "Create new lesson", new_lesson_path, class: "blue-button" %>

  <br><br>

  <div class="row">
    <% @lessons.each do |lesson| %>
      <div class="perimeter-card col-12 col-md-6 col-xl-4">
        <%= link_to lesson do %>
          <div class="card-lesson">
            <div class="card-lesson-header">
              <p class="lesson-location"><i class="fas fa-map-marker-alt"></i> <%= lesson.location %></p>
            </div>

            <div class="lesson-info">
              <div>
                <h2><%= lesson.title %></h2>
                <p><i class="fas fa-calendar-day"></i> Days <i class="fas fa-clock"></i> time</p>
              </div>

              <div class="lesson-price">
                <h2><%= lesson.price %>â‚¬</h2>
                <p>per person</p>
              </div>
              <%#= image_tag "avatar.jpg" %>
            </div>
          </div>
        <% end %>
        <% if policy(lesson).edit? %>
          <%= link_to edit_lesson_path(lesson), class: "blue-button btn-edit" do %>
            <i class="far fa-edit"></i> Edit
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
