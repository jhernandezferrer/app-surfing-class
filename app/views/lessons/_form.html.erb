
<%= simple_form_for @lesson do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :class_day %>
  <%= f.input :lesson_start %>
  <%= f.input :lesson_end %>
  <%= f.input :student_limit %>
  <%= f.input :price %>
  <%= f.input :photo, as: :file %>

  <%= f.button :submit, class: "blue-button" %>
  <%= link_to 'Back', lessons_path, class: "btn btn-outline-secondary" %>
<% end %>
